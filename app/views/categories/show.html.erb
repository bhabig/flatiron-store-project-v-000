<h1><%= @category.title %></h1>

<ul>

<% @category.items.each do |item| %>

  <% if item.inventory >0 %>
    <li><%= link_to item.title, item_path(item) %></li>
    <br />
    <%= item.inventory %>
    $<%= item.display_price %>
    <% if user_signed_in? %>
      <%=form_tag(controller: "line_items", action: "create") do %>
        <%= hidden_field_tag :item_id %>
        <%= submit_tag "Add to Cart" %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

</ul>
